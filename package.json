{
  "name": "death-clock",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:andersjanmyr/death-clock.git"
  },
  "scripts": {
    "build-js": "browserify -t reactify app/js/main.js | uglifyjs -mc > static/bundle.js",
    "build-less": "lessc app/less/main.less static/main.css",
    "build": "npm run build-js && npm run build-less",
    "watch-js": "watchify app/js/main.js -o static/bundle.js -dv",
    "watch-less": "lesswatcher --less_dir=app/less --css_dir=static",
    "watch": "npm run watch-js & npm run watch-css",
    "start": "node server.js",
    "test": "tap test/*.js",
    "jshint": "jshint *.js lib/**/*.js"
  },
  "jshintConfig": {
    "curly": false,
    "indent": 4,
    "latedef": "nofunct",
    "unused": true,
    "globalstrict": true,
    "trailing": true,
    "maxparams": 4,
    "maxdepth": 2,
    "maxcomplexity": 6,
    "node": true,
    "browser": true,
    "globals": {
      "before": true,
      "describe": true,
      "expect": true,
      "it": true
    }
  },
  "dependencies": {
    "hyperquest": "^0.1.8",
    "express": "^4.0.0",
    "morgan": "^1.0.0",
    "cookie-parser": "^1.0.1",
    "body-parser": "^1.0.0",
    "debug": "^0.7.4"
  },
  "devDependencies": {
    "browserify": "^3.14.0",
    "watchify": "^0.4.1",
    "tap": "^0.4.6",
    "less": "^1.5.1",
    "lesswatcher": "^0.2.0",
    "uglify-js": "^2.4.8",
    "reactify": "^0.5.1",
    "envify": "^0.2.0",
    "react": "^0.8.0",
    "jshint": "^2.4.4",
    "nodemon": "^1.0.15",
    "react-tools": "^0.9.0"
  }
}
